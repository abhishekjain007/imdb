<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="250dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"

    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView

            android:id="@+id/poster_SmallItem"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/title_SmallItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorTransparentRed"
            android:ems="10"
            android:gravity="left"
            android:inputType="textPersonName"
            android:maxLines="3"
            android:text="title"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/poster_SmallItem"
            app:layout_constraintStart_toStartOf="@+id/poster_SmallItem"
            app:layout_constraintTop_toBottomOf="@+id/poster_SmallItem" />

        <ImageView
            android:id="@+id/heart_smallItem"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/heart_blank1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="8dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
