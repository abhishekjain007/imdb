<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardItem_large"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="298dp"
    android:layout_height="228dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="2dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    >

<android.support.constraint.ConstraintLayout
    android:id="@+id/card_large_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView

        android:id="@+id/poster_LargeItem"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/title_LargeItem"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorTransparentRed"
        android:ems="10"
        android:gravity="left"
        android:inputType="textPersonName"
        android:text="title"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/poster_LargeItem"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/poster_LargeItem"
        app:layout_constraintTop_toBottomOf="@+id/poster_LargeItem" />

    <ImageView
        android:id="@+id/heart_largeItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/heart_blank1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
